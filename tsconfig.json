{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es6",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true, // Allows for the use of default imports, and the export = syntax from commonjs node modules.
    "resolveJsonModule": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "**/*.json",
    "src/__tests__"
  ]
}